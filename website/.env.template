# DriveAhead Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=driveahead-f1-analytics-2025-secret-key-change-in-production

# API Configuration
JOLPICA_API_BASE=http://api.jolpi.ca/ergast/f1
API_TIMEOUT=10
API_CACHE_TTL=300
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1.0

# Performance Configuration  
DATA_REFRESH_INTERVAL=30000
LOADING_TIMEOUT=5000
CHART_ANIMATION_DURATION=1000

# Season Configuration
CURRENT_SEASON=2025
SEASON_START_MONTH=3
SEASON_END_MONTH=12

# FastF1 Configuration (if using FastF1)
FASTF1_CACHE_ENABLED=True
FASTF1_CACHE_DIR=./cache

# Database Configuration (if needed)
DATABASE_URL=sqlite:///driveahead.db

# External APIs (optional integrations)
WEATHER_API_KEY=your-weather-api-key-here
TWITTER_API_KEY=your-twitter-api-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/driveahead.log

